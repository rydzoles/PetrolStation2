<Page x:Class="PetrolStation.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
     xmlns:local="clr-namespace:PetrolStation"
      xmlns:core="clr-namespace:PetrolStation.Core;assembly=PetrolStation.Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsPage">
    <Page.DataContext>
        <core:ProductsPageViewModel/>
    </Page.DataContext>
<Grid >
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="222" Height="111">
            <ItemsControl  ItemsSource="{Binding FinalLIst}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=ProductName}" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding Path=ProductPrice}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <Button HorizontalAlignment="Center" 
                VerticalAlignment="Center" Height="22" Width="222" 
                Command="{Binding AddNewProductCommand}"/>
    </Grid>
</Page>
